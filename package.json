{
  "name": "@kumar08/react-lib",
  "version": "1.0.2",
  "description": "",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "homepage": "https://github.com/yksandeep/react-lib",
  "size-limit": [
    {
      "path": "dist/cjs/index.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/esm/index.js",
      "limit": "10 KB"
    }
  ],
  "engines": {
    "node": ">=8.12.0",
    "yarn": ">=1.22.19",
    "npm": "please-use-yarn"
  },
  "scripts": {
    "test:lib": "echo \"Error: no test specified\" && exit 1",
    "build": "rm -rf dist && yarn run build:esm && yarn run build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module CommonJs --outDir dist/cjs",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "publish:yalc": "yarn run build && yalc publish --push --no-scripts --yarn",
    "build:doc": "./node_modules/.bin/jsdoc --verbose -c ./jsdoc.json",
    "build:doc:watch": "./node_modules/.bin/onchange \"src/**/*.t(s|sx)\" -- yarn run build:doc",
    "create-component": "cd .create-component && yarn && yarn start",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "Kumar Sandeep",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@parcel/transformer-typescript-tsc": "^2.8.0",
    "@parcel/validator-typescript": "^2.8.0",
    "@storybook/addon-actions": "^6.5.13",
    "@storybook/addon-essentials": "^6.5.13",
    "@storybook/addon-interactions": "^6.5.13",
    "@storybook/addon-links": "^6.5.13",
    "@storybook/builder-webpack5": "^6.5.13",
    "@storybook/manager-webpack5": "^6.5.13",
    "@storybook/react": "^6.5.13",
    "@storybook/testing-library": "^0.0.13",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@types/styled-components": "^5.1.26",
    "better-docs": "^2.7.2",
    "hound": "^1.0.5",
    "husky": "^8.0.2",
    "jsdoc": "3.6.10",
    "jsdoc-babel": "^0.5.0",
    "onchange": "^7.1.0",
    "parcel": "^2.8.0",
    "parcel-resolver-ignore": "^2.1.3",
    "parcel-resolver-tspaths": "^0.0.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.9.3",
    "typescript-plugin-css-modules": "^4.1.0"
  },
  "dependencies": {
    "styled-components": "^5.3.6"
  }
}
